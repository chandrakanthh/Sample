<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModelList"
            type="com.example.mysample.model.ChatListsModel" />
    </data>
    <RelativeLayout
        android:id="@+id/single_list_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/selected_itemView"
            android:layout_width="@dimen/dimens_3dp"
            android:layout_height="@dimen/dimens_30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@color/orange"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/data_rl"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_15dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/chatPic_img"
                android:src="@mipmap/ic_launcher"
                android:layout_marginRight="@dimen/dimens_15dp"
                android:layout_marginEnd="@dimen/dimens_15dp"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/msg_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/light_white"
                android:text="@string/static_time_str"
                android:textSize="@dimen/textsize_12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_toRightOf="@+id/chatPic_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name_tv"
                android:textStyle="bold"
                android:textSize="@dimen/textsize_14sp"
                android:text="@{viewModelList.name}"
                android:textColor="@color/white"
                android:layout_toStartOf="@+id/msg_time_tv"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/msg_time_tv"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/chatPic_img" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/company_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name_tv"
                android:layout_marginTop="@dimen/dimens_2dp"
                android:text="@{viewModelList.companyName}"
                android:layout_toEndOf="@+id/chatPic_img"
                android:layout_toRightOf="@+id/chatPic_img"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_12sp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/company_bs_tv"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="@dimen/dimens_2dp"
                android:textSize="@dimen/textsize_12sp"
                android:textColor="@color/light_white"
                android:layout_below="@+id/company_name_tv"
                android:layout_toRightOf="@+id/chatPic_img"
                android:layout_toEndOf="@+id/chatPic_img"
                />

        </RelativeLayout>
    </RelativeLayout>

</layout>